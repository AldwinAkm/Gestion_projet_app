<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Login - TaskSphere</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block javascripts %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body class="text-center">
        <main class="form-signin w-100 m-auto">
            <form action="{{ path('security_login') }}" method="post">
                <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                <div class="form-floating mb-3">
                    <input autocomplete="username" type="email" class="form-control" id="inputEmail" name="_username" placeholder="name@example.com" value="{{ last_username }}">
                    <label for="inputEmail">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input autocomplete="current-password" type="password" class="form-control" id="inputPassword" name="_password" placeholder="Password">
                    <label for="inputPassword">Password</label>
                </div>

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>

                <input type="hidden" id="csrf_token" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                <p class="mt-3 mb-3 text-muted">Don’t have an account yet? <a class="text-decoration-none" href="{{ path('security_signup') }}">Sign up</a></p>
            </form>
        </main>
    </body>
</html>
