{% set issue = app.user.selectedProject.issues.first %}

<div {{ attributes }}>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3 col-sm-12 mb-sm-3 mt-sm-0">
                <div class="card">
                    <div class="card-header">Backlog</div>
                    <div class="card-body">
                        <div class="list-group">
                            {% for issue in issues %}
                                <button class="list-group-item list-group-item-action" {{ live_action('setSelectedIssue', { id: issue.id }) }}>
                                    <span class="fw-bold">{{ issue.id }}</span>
                                    <br>
                                    <span class="small">{{ issue.summary }}</span>
                                </button>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                {{ component('Issue', {
                    attachments: issue.attachments.toArray,
                    issue: issue
                }) }}
            </div>
        </div>
    </div>
</div>