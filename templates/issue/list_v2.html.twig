{% extends 'base.html.twig' %}

{% block title %}Issue navigator{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3 col-sm-12 mb-sm-3 mt-sm-0">
                {{ component('Backlog', {
                    issues: issues
                }) }}
            </div>
            <div class="col-md-6 col-sm-12">
                {{ component('Issue', {
                    attachments: app.user.selectedProject.issues.first.attachments.toArray,
                    issue: app.user.selectedProject.issues.first
                }) }}
            </div>
        </div>
    </div>
{% endblock %}